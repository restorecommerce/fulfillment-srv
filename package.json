    "@types/xml-js": "^1.0.0",
    "dayjs": "^1.11.10",
    "redis": "^4.6.13",
    "soap": "^1.0.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@alenon/grpc-mock-server": "^3.1.7",
