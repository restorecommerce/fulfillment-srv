{
  "name": "fulfillments-srv",
  "version": "0.0.1",
  "main": "./lib/start.js",
  "description": "fulfillment service for creating and managing fulfillment",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/fulfillment-srv"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.6.13",
    "@restorecommerce/cart": "^0.3.5",
    "@restorecommerce/chassis-srv": "^1.2.5",
    "@restorecommerce/cluster-service": "^1.0.2",
    "@restorecommerce/grpc-client": "^2.0.2",
    "@restorecommerce/kafka-client": "^1.0.16",
    "@restorecommerce/logger": "^1.2.4",
    "@restorecommerce/rc-grpc-clients": "^1.1.0",
    "@restorecommerce/resource-base-interface": "^1.2.5",
    "@restorecommerce/service-config": "^1.0.6",
    "@types/soap": "^0.21.0",
    "@types/xml-js": "^1.0.0",
    "dayjs": "^1.11.9",
    "lodash": "^4.17.21",
    "redis": "^3.1.2",
    "soap": "^0.42.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@alenon/grpc-mock-server": "^3.0.21",
    "@types/ioredis": "^4.28.10",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.39",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "async-mutex": "^0.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-prefer-arrow-functions": "^3.1.4",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^10.9.1",
    "ts-proto": "^1.156.1",
    "tslint": "^6.1.3",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "start": "npm run createtopics && node lib/start.js",
    "dev": "cross-env NODE_ENV=development npm run createtopics && nodemon --watch './src/**/*.ts' --exec 'ts-node' src/worker.ts",
    "dev:nocluster": "ts-node src/worker.ts",
    "lint": "eslint src --ext .ts --fix",
    "createtopics": "node setupTopics io.restorecommerce.fulfillment.resource io.restorecommerce.command io.restorecommerce.jobs io.restorecommerce.fulfillment_method.resource io.restorecommerce.fulfillment_courier.resource",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf lib",
    "build": "npm-run-all build:clean build:tsc",
    "test": "nyc npm run mocha",
    "mocha": "cross-env NODE_ENV=test node_modules/.bin/mocha --full-trace --exit --timeout 30000",
    "lcov-report": "nyc report --reporter=lcov"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
