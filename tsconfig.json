{
  "compilerOptions": {
    "baseUrl": "",
    "target": "ES2021",
    "module": "commonjs",
    "incremental": true,
    "diagnostics": false,
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": [
      "es2020.promise",
      "dom"
    ],
    "importHelpers": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "doc"
  ]
}
